<%- include('../head'); -%>
<%- include('../sidebar'); -%>
<%- include('../header'); -%>


<div class="content-wrap">

  <div class="main">
    <div class="container-fluid">
      <div class="card card-registration">
        <section id="main-content">
          <div class="card-body">
            <h3>Cadastrar Usuário Org1</h3>
            <form id="saveUser" method="POST" action="/user/save" enctype="application/json">

              <div class="row">
                <div class="col-md-12">
                  <div class="form-outline">
                    <label class="form-label" for="name">Nome</label>
                    <input type="text" id="username" name="username" class="form-control form-control-lg" />
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-4">
                  <div class="form-outline">
                    <label class="form-label" for="age">Idade</label>
                    <input type="text" id="age" name="age" class="form-control form-control-lg" />
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-outline">
                    <label class="form-label cpf-mask" for="cpf">CPF</label>
                    <input type="text" id="cpf" name="cpf" class="form-control form-control-lg"  maxlength="11"/>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-outline">
                    <label class="form-label" for="phoneNumber">Telefone</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control form-control-lg" maxlength="9"/>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-4">
                  <label for="office">Cargo:</label>                  
                  <select class="form-control" id="office" name="office">
                    <option value="Cargo 1">Cargo 1</option>
                    <option value="Cargo 2">Cargo 2</option>
                    <option value="Cargo 3">Cargo 3</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <label for="permission">Permissão:</label>                  
                  <select class="select form-control" id="permission" name="permission">
                    <option value="1">Leitura</option>
                    <option value="2">Escrita</option>
                    <option value="3">Leitura e Escrita</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <div class="form-outline">
                    <label class="form-label" for="pki">PKI</label>
                    <input type="text" id="pki" name="pki" class="form-control form-control-lg" />
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <label for="description">Descrição:</label>
                  <textarea style="resize: none;" class="form-control" id="description" name="description" rows="4"></textarea>
                </div>
              </div>

              <div class="row">
                <div class="col-lg-5"></div>
                <div class="col-lg-2">
                  <button type="submit" class="btn btn-success">Salvar</button>
                </div>
                <div class="col-lg-5"></div>
              </div>

            </form>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<%- include('../importScript'); -%>

<script>
</script>
</body>

</html>