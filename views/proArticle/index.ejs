  <div class="main">
    <div class="container-fluid">

      <!-- /# row -->
      <section id="main-content">
        <div class="row">

          <div class="col-lg-12">

            <div class="card">
              <div class="card-title">
                <h3>Pro Article</h3>
              </div>
              <br>

              <div class="row">
                <div class="col-md-12" style="text-align: center; font-size: x-large;">
                  
                  <a href="/pro_article/uploadFile" class="btn btn-primary btn active" role="button" aria-pressed="true">Upload File</a>
                  <a href="/pro_article/new" class="btn btn-secondary btn active" role="button" aria-pressed="true">Send File</a>
